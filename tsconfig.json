{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "typeRoots": [
    "./utils",
    "./node_modules/@types"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/utils/*"
    ]
  },
  "exclude": [
    "node_modues"
  ]
}